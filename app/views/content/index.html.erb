<% content_for :head do %>
  <title><%= t('app.name') %>::<%= t('pages.content') %></title>
<% end %>

<h1><%= t('content.title') %></h1>

<ol class="list-group list-group-numbered">
  <% @plays.each do |link, name| %>
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold">
          <%= title(name) %>
        </div>
        <small>
          <%= link_to t('content.see-stats'), statistics_index_path(play: link) %>
        </small>
      </div>
    </li>
  <% end -%>
</ol>
